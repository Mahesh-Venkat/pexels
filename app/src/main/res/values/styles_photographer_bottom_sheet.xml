<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Header" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/grid_4x</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Title" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/grid_2x</item>
        <item name="android:layout_marginEnd">@dimen/grid_1x</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Value" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:gravity">start</item>
        <item name="maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/grid_1x</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


</resources>